{
  "name": "offline-verifier",
  "version": "0.0.2",
  "description": "Detect and Handle browser connection",
  "authors": [
    "Roy Surjano <rsurjano@outlook.com> (https://codex-media.com)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codex-media/offline-verifier.git"
  },
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm build",
    "test": "npm run lint && npm run test-code-coverage",
    "test-code-coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --bail",
    "test-std": "mocha -- -R spec --bail",
    "build": "tsc -p . && npm run umd",
    "umd": "browserify index.js --standalone OfflineVerifier > bundler/offline-verifier.umd.js",

    "umdwatch": "watchify index.js --standalone OfflineVerifier -o bundler/offline-verifier.umd.js -v",
    "watch": "tsc -w -p . | npm run umdwatch"
  },
  "dependencies": { },
  "typings": "index.d.ts",
  "devDependencies": {
    "istanbul": "^0.4.3",
    "mocha": "^2.2.1",
    "watchify": "^3.7.0"
  }
}
