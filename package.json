{
  "name": "offline-verifier",
  "version": "0.0.2",
  "description": "Detect and Handle browser connection",
  "authors": [
    "Roy Surjano <rsurjano@outlook.com> (https://codex-media.com)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codex-media/offline-verifier.git"
  },
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm build",
    "mocha": "mocha",
    "test": "npm run mocha && npm run test-code-coverage",
    "test-code-coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --bail",
    "test-std": "mocha -- -R spec --bail",
    "build": "tsc -p . && npm run umd",
    "umd": "browserify src/index.js --standalone OfflineVerifier > bundler/offline-verifier.umd.js",
    "umdwatch": "watchify src/index.js --standalone OfflineVerifier -o bundler/offline-verifier.umd.js -v",
    "watch": "tsc -w -p . | npm run umdwatch"
  },
  "dependencies": {},
  "typings": "index.d.ts",
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "^9.8.3",
    "mocha": "^2.5.3",
    "ts-node": "^1.6.1",
    "watchify": "^3.7.0"
  }
}
